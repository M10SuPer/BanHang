@model KetNoiCsdl.EF.Product
@{
    ViewBag.Title = "Edit1";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<h2>Cập Nhật Sản Phẩm</h2>

@using (Html.BeginForm("Edit1", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Mời bạn nhập đầy đủ các thông tin</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.LabelFor(model => model.tensanpham, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.tensanpham, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.tensanpham, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.LabelFor(model => model.gia, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.gia, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </form>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập nhật" class="btn btnprimary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

