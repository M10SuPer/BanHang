@model PagedList.IPagedList<KetNoiCsdl.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Danh sách sản phẩm</div><!-- /.panel-heading --><div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Chức Năng</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="Product/Edit1/@item.IDPro">Sửa</a>

                                        @Ajax.ActionLink("Xóa","Delete1",new { @id = item.IDPro },new AjaxOptions
                                           {
                                               Confirm ="Bạn có muốn xóa người dùng này?",
                                               OnComplete ="$('#row_"+item.IDPro+"').remove()",
                                               HttpMethod ="Delete"

                                           })
                                    </td>
                                    <td>@item.tensanpham</td>
                                    <td>@item.gia</td>     

                                </tr>}
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
                </div>                 <!-- /.table-responsive -->
            </div>             <!-- /.panel-body -->
        </div>         <!-- /.panel -->
    </div>
</div>

